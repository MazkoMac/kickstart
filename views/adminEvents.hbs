<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Admin Events</title>
    <link href='style.css' rel='stylesheet' type='text/css'/>
    <link href='admin.css' rel='stylesheet' type='text/css'/>
</head>

<body>
    {{> navigation}}

    <div id="contentDiv">
        <div id="adminEventContentDiv">
            <div id="formDiv">
                <h2>New Event</h2>
                <form action="/admin" method="POST" id="adminEventForm">
                    <div class="adminEventFormDiv">
                        <label class="floatLabel" for="eventTitleInput">Event Name</label>
                        <input class="fieldInput" id="eventTitleInput" type="text">
                    </div>
                    <div class="adminEventFormDiv">
                        <label class="floatLabel" for="dateInput">Date</label>
                        <input class="fieldInput" id="dateInput" type="date">
                    </div>
                    <div class="adminEventFormDiv">
                        <label class="floatLabel" for="startTimeInput">Start Time</label>
                        <input class="fieldInput" id="startTimeInput" type="time">
                    </div>
                    <div class="adminEventFormDiv">
                        <label class="floatLabel" for="endTimeInput">End Time</label>
                        <input class="fieldInput" id="endTimeInput" type="time">
                    </div>
                    <div class="adminEventFormDiv">
                        <label class="floatLabel" for="location">Location</label>
                        <input class="fieldInput" id="location" type="text">
                    </div>
                    <div class="adminEventFormDiv">
                        <label class="floatLabel" for="descriptionInput">Description</label>
                        <input class="fieldInput" id="descriptionInput" type="textarea">
                    </div>
                    <input class="submitButton" type="submit">
                </form>
            </div>


        <div id="adminEventDiv">
            <h2>Current Events</h2>
            <table id="adminEventtb">
              <tr>
                <td>Visit Student Health Office <button class="adminEventEditButton">Edit</button></td>
              </tr>
              <tr>
                <td>Visit Tim Hortons <button class="adminEventEditButton">Edit</button></td>
              </tr>
              <tr>
                <td>Visit International Office <button class="adminEventEditButton">Edit</button></td>
              </tr>
              <tr>
                <td>Visit Student Life Office <button class="adminEventEditButton">Edit</button></td>
              </tr>
              <tr>
                <td>Visit EhPods <button class="adminEventEditButton">Edit</button></td>
              </tr>
              <tr>
                <td>Visit Student Information &amp; Enrollment Services <button class="adminEventEditButton">Edit</button></td>
              </tr>
              <tr>
                <td>Visit Student Association Office <button class="adminEventEditButton">Edit</button></td>
              </tr>
            </table>
        </div>
    </div>

</body>

</html>