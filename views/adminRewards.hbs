<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Admin Events</title>
    <link href='style.css' rel='stylesheet' type='text/css'/>
    <link href='admin.css' rel='stylesheet' type='text/css'/>
</head>

<body>
    {{> navigation}}

    <div id="contentDiv">
      <div id="adminLinkFormDiv">
        <form class="adminLinkForm" action="/admin" method="post" enctype="application/json">
          <input id="adminEventsLink" name="adminPageType" value="events" type="submit">
        </form>
        <form class="adminLinkForm" action="/admin" method="post" enctype="application/json">
          <input id="adminRewardsLink" name="adminPageType" value="rewards" type="submit">
        </form>
      </div>
        <div id="adminRewardContentDiv">
            <div id="formDivWrap">
              <div id="formDiv">
                  <h2>New Reward<br><br></h2>
                  <form action="/admin" enctype="application/json" method="POST" id="adminRewardForm">
                      <div class="adminRewardFormDiv">
                          <label class="floatLabel" for="RewardTitleInput">Reward Name</label>
                          <input class="fieldInput" name="RewardTitleInput" id="RewardTitleInput" type="text">
                      </div>
                      <div class="adminRewardFormDiv">
                          <label class="floatLabel" for="dateInput">Date</label>
                          <input class="fieldInput" name="dateInput" id="dateInput" type="date">
                      </div>
                      <div class="adminRewardFormDiv">
                          <label class="floatLabel" for="startTimeInput">Start Time</label>
                          <input class="fieldInput" name="startTimeInput" id="startTimeInput" type="time">
                      </div>
                      <div class="adminRewardFormDiv">
                          <label class="floatLabel" for="endTimeInput">End Time</label>
                          <input class="fieldInput" name="endTimeInput" id="endTimeInput" type="time">
                      </div>
                      <div class="adminRewardFormDiv">
                          <label class="floatLabel" for="location">Location</label>
                          <input class="fieldInput" name="locationInput" id="location" type="text">
                      </div>
                      <div class="adminRewardFormDiv">
                          <label class="floatLabel" for="pointsInput">Points</label>
                          <input class="fieldInput" name="pointsInput" id="pointsInput" type="number">
                      </div>
                      <div class="adminRewardFormDiv">
                          <label class="floatLabel" for="descriptionInput">Description</label>
                          <input class="fieldInput" name="descInput" id="descriptionInput" type="textarea">
                      </div>
                      <br><input class="submitButton" type="submit">
                  </form>
              </div>
            </div>

        <div id="adminRewardDiv">
            <h2>Current Rewards<br><br></h2>
            <table id="adminRewardtb">
              <tr>
                <td>Visit Student Health Office <button class="adminRewardEditButton">Edit</button></td>
              </tr>
              <tr>
                <td>Visit Tim Hortons <button class="adminRewardEditButton">Edit</button></td>
              </tr>
              <tr>
                <td>Visit International Office <button class="adminRewardEditButton">Edit</button></td>
              </tr>
              <tr>
                <td>Visit Student Life Office <button class="adminRewardEditButton">Edit</button></td>
              </tr>
              <tr>
                <td>Visit EhPods <button class="adminRewardEditButton">Edit</button></td>
              </tr>
              <tr>
                <td>Visit Student Information &amp; Enrollment Services <button class="adminRewardEditButton">Edit</button></td>
              </tr>
              <tr>
                <td>Visit Student Association Office <button class="adminRewardEditButton">Edit</button></td>
              </tr>
            </table>
        </div>
    </div>
  </div>

</body>

</html>